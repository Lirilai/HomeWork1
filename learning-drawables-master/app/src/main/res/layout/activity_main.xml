<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.dimasokol.drawablesdemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:showDividers="middle"
        android:divider="@drawable/layout_divider"
        android:dividerPadding="8dp"
        >

        <View
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_colored_rect"
            android:layout_marginBottom="@dimen/shape_vertical_padding"
            android:layout_marginTop="@dimen/shape_vertical_padding"
            />

        <View
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_colored_oval"
            android:layout_marginBottom="@dimen/shape_vertical_padding"
            android:layout_marginTop="@dimen/shape_vertical_padding"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rounded_rect"
            android:layout_marginBottom="@dimen/shape_vertical_padding"
            android:layout_marginTop="@dimen/shape_vertical_padding"
            />

        <View
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_gradient_rect"
            android:layout_marginBottom="@dimen/shape_vertical_padding"
            android:layout_marginTop="@dimen/shape_vertical_padding"
            />

        <View
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_gradient_oval"
            android:layout_marginBottom="@dimen/shape_vertical_padding"
            android:layout_marginTop="@dimen/shape_vertical_padding"
            />

        <View
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/layer_list"
            android:layout_marginBottom="@dimen/shape_vertical_padding"
            android:layout_marginTop="@dimen/shape_vertical_padding"
            />

        <View
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/selector_clickable_shape"
            android:layout_marginBottom="@dimen/shape_vertical_padding"
            android:layout_marginTop="@dimen/shape_vertical_padding"
            android:clickable="true"
            />

        <View
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/ninepatch"
            android:layout_marginBottom="@dimen/shape_vertical_padding"
            android:layout_marginTop="@dimen/shape_vertical_padding"
            android:clickable="true"
            />

        <View
            android:id="@+id/first_animated_view"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_gradient_rect_leveled"
            android:layout_marginBottom="@dimen/shape_vertical_padding"
            android:layout_marginTop="@dimen/shape_vertical_padding"
            android:clickable="true"
            />

        <View
            android:id="@+id/second_animated_view"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/level_list"
            android:layout_marginBottom="@dimen/shape_vertical_padding"
            android:layout_marginTop="@dimen/shape_vertical_padding"
            android:clickable="true"
            />

        <View
            android:id="@+id/animated_charging"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:background="@drawable/hw_layer_list"
            android:clickable="true"
            android:layout_marginBottom="@dimen/shape_vertical_padding"
            android:layout_marginTop="@dimen/shape_vertical_padding"
            />

    </LinearLayout>

</ScrollView>
